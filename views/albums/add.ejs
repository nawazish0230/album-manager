<% include ../partials/header %>

<h2>Add Albums</h2>

<form action="/albums/add" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label>Artist</label>
        <input type="text" class="form-control" name="artist">
    </div>
    <div class="form-group">
        <label>Album Title</label>
        <input type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
    <label>Genre</label>
    <select name="genre" id="" class="form-control">
        <% genre.forEach((singleGenre)=>{ %>
        <option value="<%= singleGenre.name %>"><%= singleGenre.name %></option>
        <%  }) %>         
    </select>
    </div>  
    <div class="form-group">
        <label>Album Info</label>
        <input type="text" class="form-control" name="info">
    </div>
    <div class="form-group">
        <label>Release Year</label>
        <input type="text" class="form-control" name="year">
    </div>
    <div class="form-group">
        <label>Album Cover</label>
        <input type="file" class="form-control" name="cover">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a href="/albums" class="btn btn-danger">Close</a>
</form>

<% include ../partials/footer %>